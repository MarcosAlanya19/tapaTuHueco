---
import '../styles/global.css';

interface Props {
	color?: 'black' | 'gray-dark' | 'gray-3' | 'gray-2' | 'gray-1' | 'white' | 'red' | 'blue';
	font?: 'Fredoka' | 'LeagueSpartan';
	size?: string;
	weight?: 'regular' | "medium" | 'semiBold' | 'bold';
	className?: string;
	text: string;
}

const {color = 'black', font = 'Fredoka', size = '16px', weight = 'regular', className = '', text} = Astro.props;

const fontWeightMap: Record<string, string> = {
	regular: '400',
	medium: '500',
	semiBold: "600",
	bold: '700',
};

const colorMap: Record<string, string> = {
	black: 'var(--color-black)',
	'gray-dark': 'var(--color-gray-dark)',
	'gray-3': 'var(--color-gray-3)',
	'gray-2': 'var(--color-gray-2)',
	'gray-1': 'var(--color-gray-1)',
	white: 'var(--color-white)',
	red: 'var(--color-red)',
	blue: 'var(--color-blue)',
};
---

<p
        class={className}
        style={`color: ${colorMap[color]}; font-size: ${size}; font-weight: ${fontWeightMap[weight]}; font-family: ${font}, sans-serif;`}
>
	{text}
</p>
