---
import Text from "./ui/Text.astro";
import {Image} from "astro:assets";
---

<section
  id="us"
  class="grid items-center justify-items-center p-3 my-16 md:p-16 h-screen scroll-mt-10"
>
    <article
      class="bg-red rounded-3xl p-10 md:p-14 lg:p-16 md:grid items-center lg:grid-cols-[2fr_2.5fr] gap-8 us-container"
    >
        <div class="grid gap-[33px] max-w-[255px] lg:max-w-[430px] us-text">
            <Text
              as="h2"
              className="text-[30px] leading-[32px] lg:text-[44px] lg:leading-[45px]"
              color="white"
              font="LeagueSpartan"
              text="Creemos que cada ciudadano tiene el derecho a vivir en una ciudad segura y limpia"
              weight="semiBold"
            />
            <Text
              color="white"
              text="Nuestra misiÃ³n es empoderar a la comunidad para que sea agente de cambio y transforme su entorno."
              weight="light"
              className="text-[22px] leading-[25px]"
            />
        </div>
        <Image
          width={100}
          height={100}
          src={"/gif/test.gif"}
          alt={"Persona caminando"}
          class="pointer-events-none mix-blend-normal us-image w-full"
        />
    </article>
</section>



<style is:inline>
    
    @media (max-width: 1024px) and (orientation: landscape) {
        #us {
            height: auto;
            padding: 3rem 2rem;
        }
        
        .us-container {
            display: flex;
            flex-direction: row;
            align-items: center;
            gap: 2rem;
        }
        
        .us-text {
            flex: 1;
            text-align: left;
        }
        
        .us-image {
            flex: 1;
            max-width: 50%;
        }
    }

</style>