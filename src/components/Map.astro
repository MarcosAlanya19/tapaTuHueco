---
import Text from "./ui/Text.astro";
import Slider from "../react/Slider";
---

<section
        id="map"
        class="grid  md:flex md:items-center h-screen my-7 md:p-16 scroll-mt-10 lg:scroll-mt-7"
>
    <div
            class="grid grid-rows-[.3fr_1fr] md:grid-rows-1 w-full"
    >
        <div
                class="p-7 flex flex-col gap-4 justify-end"
        >
            <Text
                    as="h2"
                    color="blue"
                    font="LeagueSpartan"
                    text="Descubre el poder de tu voz"
                    weight="bold"
                    className="text-[32px] leading-[34px] lg:text-[42px] lg:leading-[100%]"
            />
            <Text
                    as="p"
                    color="gray-dark"
                    font="LeagueSpartan"
                    text="Explora nuestro mapa interactivo y visualiza cómo los reportes de la comunidad están transformando nuestras calles."
                    weight="light"
                    className="text-[18px] leading-[20px] max-w-[540px]"
            />
        </div>
        <div
                class="h-full md:min-h-[35.625rem] bg-gray-1 md:rounded-[30px] flex items-center justify-center"
        >
            Mapa
        </div>
    </div>
</section>

<style is:inline>
    @media (max-width: 1024px) and (orientation: landscape) {
        #map {
            height: 100%;
        }
    }
</style>
