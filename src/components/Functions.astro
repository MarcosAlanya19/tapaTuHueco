---
import Text from "./ui/Text.astro";
import Slider from "../react/Slider";
---

<section
        id="functions"
        class="flex justify-center items-center h-screen p-16"
>
    <article
            class="grid lg:grid-cols-[1fr_.7fr] justify-items-center items-center relative"
    >
        <div
                class="bg-gray-1 mx-7 rounded-[1.875rem] p-11 grid lg:w-[34.625rem] lg:grid-cols-[2fr_1fr] h-fit relative z-0"
        >
            <div>
                <Text
                        as="h2"
                        color="blue"
                        font="LeagueSpartan"
                        text="Transforma tu ciudad con un clic"
                        weight="semiBold"
                        className={"leading-[34px] lg:leading-[57px] text-[2rem] lg:text-[3.625rem]"}
                />
                <Text
                        as="p"
                        color="gray-dark"
                        font="LeagueSpartan"
                        size="1.25rem"
                        text="Descubre sobre nuestras funciones"
                        weight="light"
                />
            </div>
        </div>
        <div
                class="lg:absolute lg:top-1/2 lg:-translate-y-1/2 lg:right-[-30px] z-10 max-w-fit"
        >
            <Slider
                    client:idle
            />
        </div>
    </article>
</section>
