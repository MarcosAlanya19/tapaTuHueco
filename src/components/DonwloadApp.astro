---
import Text from "./ui/Text.astro";
---

<section class="grid items-center justify-items-center p-10 h-screen">
  <div class="grid gap-11">
    <div class="text-center">
      <Text
        as="h1"
        color="red"
        font="LeagueSpartan"
        size="36px"
        text="Construyamos juntos el Perú que queremos"
        weight="bold"
      />
      <div>
        <Text
          color="gray-dark"
          text="Descarga Tapa tu Hueco y sé parte del cambio."
          weight="light"
          size="20px"
        />
        <Text
          color="gray-dark"
          text="Tu ciudad te necesita."
          weight="light"
          size="20px"
        />
      </div>
    </div>
    <div class="flex justify-center gap-9">
      <img
        alt="GooglePlay"
        class="cursor-pointer"
        src="/img/GooglePlay.png"
      >
      <img
        alt="GooglePlay"
        class="cursor-pointer"
        src="/img/AppStore.png"
      >
    </div>
    <img
      alt="ComputerSet"
      src="/img/ComputerSet.png"
    >
  </div>
</section>
