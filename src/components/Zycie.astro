---
import Text from "./ui/Text.astro";
import {Image} from 'astro:assets';
import ZycieIcon from "./ui/ZycieIcon.astro"
---

<section
  class="flex flex-col-reverse md:grid md:grid-cols-[1.2fr_1fr] items-center h-screen zycie-container"
>
    <div class="relative w-full h-full zycie-image-container">
        <div class="relative w-full h-full">
            <Image
              height={100}
              width={100}
              class="zycie-image absolute inset-0 w-full h-full object-cover object-right transition-opacity duration-1000"
              src="/img/ZycieOne.png"
              alt="Zycie Image"
              style="opacity: 1;"
            />
            <Image
              height={100}
              width={100}
              class="zycie-image absolute inset-0 w-full h-full object-cover object-right transition-opacity duration-1000"
              src="/img/ZycieTwo.png"
              alt="Zycie Image"
              style="opacity: 0;"
            />
            <Image
              height={100}
              width={100}
              class="zycie-image absolute inset-0 w-full h-full object-cover object-left transition-opacity duration-1000"
              src="/img/ZycieThree.png"
              alt="Zycie Image"
              style="opacity: 0;"
            />
            <Image
              height={100}
              width={100}
              class="zycie-image absolute inset-0 w-full h-full object-cover object-right transition-opacity duration-1000"
              src="/img/ZycieFour.png"
              alt="Zycie Image"
              style="opacity: 0;"
            />
            <Image
              height={100}
              width={100}
              class="zycie-image absolute inset-0 w-full h-full object-cover object-left transition-opacity duration-1000"
              src="/img/ZycieFive.png"
              alt="Zycie Image"
              style="opacity: 0;"
            />
            <Image
              height={100}
              width={100}
              class="zycie-image absolute inset-0 w-full h-full object-cover object-center transition-opacity duration-1000"
              src="/img/ZycieSix.png"
              alt="Zycie Image"
              style="opacity: 0;"
            />
        </div>
    </div>
    
    <div class="grid p-8 md:p-10 lg:p-24 gap-6 zycie-text">
        <a href="https://www.zycie.org/" target="_blank" class="w-fit">
            <Text
              as="h2"
              color="gray-dark"
              font="LeagueSpartan"
              text="ŻYCIE"
              weight="medium"
              className="text-[30px]"
            />
        </a>
        
        <Text
          as="h2"
          color="gray-dark"
          font="LeagueSpartan"
          text="¿Te imaginas una ciudad donde todos nos cuidamos y nos apoyamos?"
          weight="semiBold"
          className="text-[30px] leading-[34px] lg:text-[44px] lg:leading-[44px]"
        />
        <Text
          as="p"
          color="gray-dark"
          font="LeagueSpartan"
          text="Somos ŻYCIE, una organización sin fines de lucro. Creemos firmemente en la fuerza de la comunidad. Por eso, con mucho cariño, creamos Tapa tu Hueco. Una app para que juntos transformemos nuestras calles y barrios en espacios que nos llenen de orgullo. Únete a esta gran familia y sé parte del cambio, ¡tu participación es clave!"
          weight="regular"
          className="text-[18px] leading-[20px] lg:text-[20px] lg:leading-[25px]"
        />
    </div>
</section>


<style is:inline>
    @media (max-width: 1024px) and (orientation: landscape) {
        section {
            flex-direction: row;
            align-items: center;
            height: 100vh;
            padding: 3rem 2rem;
        }
        
        .zycie-container {
            display: flex;
            align-items: center;
            gap: 8px;
            height: 100dvh;
        }
        
        .zycie-text {
            flex: 1;
            text-align: left;
        }
        
        .zycie-image-container {
            flex: 1;
            width: 100%;
            height: 100dvh;
            position: relative;
        }
        
        
        .zycie-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            position: absolute;
            top: 0;
            left: 0;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const images = document.querySelectorAll(".zycie-image");
        let currentIndex = 0;
        
        setInterval(() => {
            let nextIndex = (currentIndex + 1) % images.length;
            
            images[currentIndex].style.opacity = "0";
            images[nextIndex].style.opacity = "1";
            
            currentIndex = nextIndex;
        }, 8000);
    });
</script>