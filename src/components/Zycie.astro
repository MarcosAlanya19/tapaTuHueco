<style is:inline>
  .zycie-bg-image {
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
  }

  .zycie-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    opacity: 0;
    animation: zycie-fade 36s infinite;
  }

  .zycie-one { background-image: url('/img/ZycieOne.png'); animation-delay: 0s; }
  .zycie-two { background-image: url('/img/ZycieTwo.png'); animation-delay: 6s; }
  .zycie-three { background-image: url('/img/ZycieThree.png'); animation-delay: 12s; }
  .zycie-four { background-image: url('/img/ZycieFour.png'); animation-delay: 18s; }
  .zycie-five { background-image: url('/img/ZycieFive.png'); animation-delay: 24s; }
  .zycie-six { background-image: url('/img/ZycieSix.png'); animation-delay: 30s; }

  @keyframes zycie-fade {
    0%, 20% { opacity: 1; }
    40% { opacity: 0; transition: opacity 2s ease-in-out; }
    100% { opacity: 0; }
  }
  
  @media (max-width: 1024px) and (orientation: landscape) {
    #zycie {
      height: auto;
    }
  }
</style>
