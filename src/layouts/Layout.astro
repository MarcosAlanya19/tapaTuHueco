<style>
    body {
        position: relative;
        background-image: url("/img/BackGroundMain.png");
        background-size: 100% 100vh;
        background-repeat: repeat-y;
    }
    
    body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 255, 255, 0.6);
        z-index: -1;
        pointer-events: none;
    }
    
    body * {
        position: relative;
        z-index: 1;
    }
    
    html {
        scroll-behavior: smooth;
    }

</style>
